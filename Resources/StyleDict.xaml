    <Style TargetType="{x:Type TextBox}" x:Key="SearchBox">
        <Setter Property="Background" Value="#24313c"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="170"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Foreground" Value="#fff"/>
        <Setter Property="Margin" Value="0 0 30 0"/>
    </Style>

    <Style TargetType="{x:Type TextBox}" x:Key="SearchAdminBox" BasedOn="{StaticResource SearchBox}">
        <Setter Property="Margin" Value="20 60 0 0"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Background" Value="{StaticResource SecondColor}"/>
