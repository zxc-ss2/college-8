    <Style TargetType="{x:Type Button}" x:Key="GrayBtn" BasedOn="{StaticResource GreenBtn}">
        <Setter Property="Background" Value="#435158"/>
        <Setter Property="Foreground" Value="#fff"/>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="FooterBtn">
        <Setter Property="Background" Value="#16798c"/>
        <Setter Property="Width" Value="110"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="20 0 0 0"/>
        <Setter Property="Foreground" Value="#fff"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="UserBtn">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Width" Value="125"/>
        <Setter Property="Margin" Value="20 10 0 0"/>
        <Setter Property="Padding" Value="7 7 7 7"/>
        <Setter Property="Foreground" Value="#fff"/>
        <Setter Property="Background" Value="#16798c"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="StartBtn">
        <Setter Property="Width" Value="400"/>
        <Setter Property="Foreground" Value="#fff"/>
        <Setter Property="FontSize" Value="15px"/>
        <Setter Property="Margin" Value="0 20 0 0"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#435158"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter Property="Background" Value="#16798c"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="OfferText">
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="18px"/>
        <Setter Property="Margin" Value="0 5 0 0"/>
