                    <TextBox x:Name="PART_TextBox" BorderThickness="0" Background="{StaticResource MainColor}" Text="{Binding SelectedDate, RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}, StringFormat=yyyy.MM.dd}" Foreground="#ffffff"/>
