    <SolidColorBrush x:Key="MainColor" Color="#24313c"/>
    <SolidColorBrush x:Key="SecondColor" Color="#1a242c"/>

    <Style TargetType="{x:Type Button}" x:Key="GreenBtn">
        <Setter Property="Padding" Value="8"/>
